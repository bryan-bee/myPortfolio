{
  "name": "@netlify/netlify-marketing-tokens",
  "version": "1.1.0",
  "description": "Repo contains Netlify's design tokens for Marketing",
  "contributors": [
    "Netlify <marketing@netlify.com> (https://www.netlify.com)"
  ],
  "license": "ISC",
  "dependencies": {
    "style-dictionary": "^3.7.2",
    "token-transformer": "^0.0.29"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/netlify/netlify-marketing-tokens.git"
  },
  "homepage": "https://github.com/netlify/netlify-marketing-tokens#readme",
  "bugs": {
    "url": "https://github.com/netlify/netlify-marketing-tokens/issues"
  },
  "files": [
    "dist/*",
    "build.js",
    "output.json"
  ],
  "scripts": {
    "prepublishOnly": "npm run build && npm run format:tokens",
    "prepare": "is-ci || husky install",
    "build": "node build.js",
    "test": "npm run lint",
    "lint": "npm run lint-staged .",
    "lint-staged": "eslint --cache --ignore-path .gitignore --ext .js,.json",
    "format": "npm run lint --fix",
    "format:tokens": "npx prettier --write dist/*"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0"
  },
  "lint-staged": {
    "*.js?(on)": "npm run lint-staged --fix"
  }
}
